<%- include('includes/header') %>
<%- include('includes/nav') %>

<main>
  <div class="container">

    <div class="col-8 offset-2">
        <% if(contato !== null) { %>
            <h1 class="text-center my-3">Atualize o contato</h1>
        <% } else { %>
            <h1 class="text-center my-3">Criar contato</h1>
        <% } %>

        <div class="mt-3">
            <%- include('includes/alert') %>
        </div>

        <% if(contato) { %>
            <form action="/contatos/update/<%= contato._id %>" method="post">
        <% } else { %>
            <form action="/contatos/register" method="post">
        <% } %>
                <input type="hidden" name="_csrf" value="<%- csrfToken %>">
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" name="firstname" placeholder="Nome do contato" class="form-control" value="<% if(contato) { %> <%= contato.firstname %> <% } %>">
                </div>
                <div class="form-group">
                    <label>Sobrenome</label>
                    <input type="text" name="lastname" placeholder="Sobrenome" class="form-control" value="<% if(contato) { %> <%= contato.lastname %> <% } %>">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" placeholder="Email do contato" class="form-control" value="<% if(contato) { %> <%= contato.email %> <% } %>">
                </div>
                <div class="form-group">
                    <label>Telefone</label>
                    <input type="tel" name="phone" placeholder="Informe o nÃºmero" class="form-control" value="<% if(contato) { %> <%= contato.phone %> <% } %>">
                </div>
                <input type="submit" class="btn btn-primary mt-2" value="Salvar">
            </form>
       
    </div>

  </div>    
</main>

<%- include('includes/footer') %>