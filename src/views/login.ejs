<%- include('includes/header') %>
<%- include('includes/nav') %>

<main>
  <div class="container">

    <div class="col-8 offset-2">
        <h1 class="text-center my-3">Criar conta ou entrar</h1>

        <div class="mt-3">
            <%- include('includes/alert') %>
        </div>
        
        <div class="row" style="margin-top: 50px;">    
            
            <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <p>Se você ainda não tem conta, faça seu cadastro abaixo</p>


                <form action="/login/register" method="post" class="form-register">
                    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
                    <div class="form-group">
                        <label>Endereço de e-mail</label>
                        <input type="email" name="email" placeholder="exemple@gmail.com" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Senha</label>
                        <input type="password" name="password" class="form-control">
                    </div>
                    <input type="submit" class="btn btn-primary mt-2" value="Cadastrar">
                </form>
            </div>

            <div class="col-lg">
                <h4>Faça seu login</h4>
                <p>Se você já possui uma conta, faça seu login</p>

                <form action="/login/login" method="post" class="form-login">
                    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
                    <div class="form-group">
                        <label>Endereço de e-mail</label>
                        <input type="email" name="email" placeholder="exemple@gmail.com" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Senha</label>
                        <input type="password" name="password" class="form-control">
                    </div>
                    <input type="submit" class="btn btn-primary mt-2" value="Entrar">
                </form>
            </div>

        </div>
       
    </div>

  </div>    
</main>

<%- include('includes/footer') %>